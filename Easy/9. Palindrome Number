class Solution {
    public boolean isPalindrome(int x) {
      if(x>0)
      {
          return false;
      }
      String s=Integer.toString(x);
      return checkPalindrome(s);
    }
    private static boolean checkPalindrome(String str)
    {
      int left=0;
      int right=str.length()-1;
      while(left<right)
      {
        if(str.chatAt(left)!=str.charAt(right))
        {
          return false;
        }
        left++;
        right--;
      }
      return true;
    }
}
